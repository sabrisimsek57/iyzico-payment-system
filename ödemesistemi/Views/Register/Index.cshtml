
@{
    Layout = null;
}

<!DOCTYPE html>
@model CreateNewUserDto
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/web/style.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }

        .recent-orders {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-input {
            width: 300px;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .submit {
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 15px; /* Adjust the padding for larger size */
            border-radius: 3px;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .submit:hover {
                background-color: #45a049;
            }

        .login-form__footer {
            margin-top: 20px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="recent-orders">



        <form class="mt-5 mb-5 login-input" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                <span asp-validation-for="Name" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Surname" asp-for="Surname">
                <span asp-validation-for="Surname" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                <span asp-validation-for="Address" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="City" asp-for="City">
                <span asp-validation-for="City" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Zip Code" asp-for="ZipCode">
                <span asp-validation-for="ZipCode" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="TC Number" asp-for="Tc">
                <span asp-validation-for="Tc" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" asp-for="Username">
                <span asp-validation-for="Username" class="text-center"></span>
            </div>
         
         
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                <span asp-validation-for="Password" class="text-center"></span>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword " class="text-center"></span>
            </div>
            <button type="submit" class="btn login-form__btn submit w-100">Register</button>
        </form>
        <p class="mt-5 login-form__footer">Do you have an account? <a href="/Login/Index/" class="text-primary">Login </a> now</p>

    </div>
</body>
</html>
