@model loginUserDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <title>Login Page</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/web/style.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-form {
            width: 300px;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .submit {
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 15px;
            border-radius: 3px;
            cursor: pointer;
            margin: auto;
        }

            .submit:hover {
                background-color: #45a049;
            }

        .login-form__footer {
            margin-top: 20px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="login-container">

        <a class="text-center" href="index.html"> <h4></h4></a>

        <form class="mt-5 mb-5 login-form" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" asp-for="Username">

            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" asp-for="Password">

            </div>
            <button class="btn login-form__btn submit w-100">Login</button>
        </form>

    </div>
</body>
</html>


